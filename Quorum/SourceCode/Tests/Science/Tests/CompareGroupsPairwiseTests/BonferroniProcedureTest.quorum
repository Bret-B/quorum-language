package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroupsPairwise
use Libraries.Compute.Statistics.Reporting.CompareGroupsResult

/*
    This class tests a bonferroni procedure on pairwise t-tests
*/
class BonferroniProcedureTest is Test

    on create
        SetName("Calculate CompareGroupsPairwise - Bonferroni Procedure")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        CompareGroupsPairwise compare
        compare:AddColumn(0)
        compare:AddColumn(1)
        compare:AddColumn(2)
        frame:Calculate(compare)
        
        // Compare 0-1
        CompareGroupsResult result0 = compare:GetResults():Get(0)
        Check(result0:GetTestStatistic(), -0.3348809561713313)
        Check(result0:GetProbabilityValue(), 1.0)

        // Compare 0-2
        CompareGroupsResult result1 = compare:GetResults():Get(1)
        Check(result1:GetTestStatistic(), 4.975374205974067)
        Check(result1:GetProbabilityValue(), 4.983472510126957e-4)

        // Compare 1-2
        CompareGroupsResult result2 = compare:GetResults():Get(2)
        Check(result2:GetTestStatistic(), 5.310255162145399)
        Check(result2:GetProbabilityValue(), 2.6199380936196766e-4)
    end
end