package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroups
use Libraries.Compute.Statistics.Reporting.CompareGroupsResult

/*
    This class tests a two-sample mann-whitney test
*/
class Compare2IndependentRankedGroupsTest is Test

    on create
        SetName("Calculate Compare2IndependentRankedGroups")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        CompareGroups compare
        compare:Ranked(true)
        compare:AddColumn(0)
        compare:AddColumn(1)
        frame:Calculate(compare)
        
        CompareGroupsResult result = compare:GetResult()
        Check(result:GetTestStatistic(), 13.5)
        Check(result:GetProbabilityValue(), 0.5203772558898254)
        Check(result:GetEffectSize(), 0.18554997976872775)
    end
end