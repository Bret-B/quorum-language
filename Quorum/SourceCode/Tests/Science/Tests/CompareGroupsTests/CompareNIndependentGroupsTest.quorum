package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroups
use Libraries.Compute.Statistics.Reporting.CompareNGroupsResult

/*
    This class tests an anova (standard and welch)
*/
class CompareNIndependentGroupsTest is Test

    on create
        SetName("Calculate CompareNIndependentGroups")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        // Standard anova (equal variances)
        CompareGroups compare
        compare:AddColumn(0)
        compare:AddColumn(1)
        compare:AddColumn(2)
        compare:AddColumn(3)
        frame:Calculate(compare)
        
        CompareNGroupsResult result = cast(CompareNGroupsResult, compare:GetResult())
        Check(result:GetTestStatistic(), 14.723411484879373)
        Check(result:GetDegreesOfFreedomBetweenGroups(), 3.0)
        Check(result:GetDegreesOfFreedomWithinGroups(), 20.0)
        Check(result:GetProbabilityValue(), 2.7087573816753086e-5)
        Check(result:GetEffectSize(), 0.6883290178075011)

        // Welch anova (unequal variances)
        CompareGroups compare2
        compare2:AssumeEqualVariances(false)
        compare2:AddColumn(0)
        compare2:AddColumn(1)
        compare2:AddColumn(2)
        compare2:AddColumn(3)
        frame:Calculate(compare2)
        
        CompareNGroupsResult result2 = cast(CompareNGroupsResult, compare2:GetResult())
        Check(result2:GetTestStatistic(), 10.384111013447587)
        Check(result2:GetDegreesOfFreedomBetweenGroups(), 3.0)
        Check(result2:GetDegreesOfFreedomWithinGroups(), 10.979656578394456)
        Check(result2:GetProbabilityValue(), 0.0015482743926348297)
        Check(result2:GetEffectSize(), 0.5398096575768787)
    end
end