package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroups
use Libraries.Compute.Statistics.Reporting.CompareGroupsResult

/*
    This class tests a one-sample t-test
*/
class CompareGroupToMeanTest is Test

    on create
        SetName("Calculate CompareGroupToMean")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        CompareGroups compare
        compare:AddColumn(0)
        frame:Calculate(compare)
        
        CompareGroupsResult result = compare:GetResult()
        Check(result:GetTestStatistic(), 2.7774602993176543)
        Check(result:GetDegreesOfFreedom(), 5.0)
        Check(result:GetGroupSummary(result:GetGroups():Get(0)):GetMean(), 6.0)
        Check(result:GetProbabilityValue(), 0.03901915828494069)
        Check(result:GetEffectSize(), 1.1338934190276817)
    end
end