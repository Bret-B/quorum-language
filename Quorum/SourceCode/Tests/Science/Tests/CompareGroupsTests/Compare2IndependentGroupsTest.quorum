package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroups
use Libraries.Compute.Statistics.Reporting.CompareGroupsResult

/*
    This class tests a two-sample t-test (welch and student)
*/
class Compare2IndependentGroupsTest is Test

    on create
        SetName("Calculate Compare2IndependentGroups")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        // Welch t-test (unequal variances)
        CompareGroups compare
        compare:AddColumn(0)
        compare:AddColumn(1)
        frame:Calculate(compare)
        
        CompareGroupsResult result = compare:GetResult()
        Check(result:GetTestStatistic(), -0.3854541397819923)
        Check(result:GetDegreesOfFreedom(), 9.996467122178753)
        Check(result:GetGroupSummary(result:GetGroups():Get(0)):GetMean(), 6.0)
        Check(result:GetGroupSummary(result:GetGroups():Get(1)):GetMean(), 7.166666666666666)
        Check(result:GetProbabilityValue(), 0.7079760534509183)
        Check(result:GetEffectSize(), -0.22254205136338887)

        // Student t-test (equal variances)
        CompareGroups compare2
        compare2:AssumeEqualVariances(true)
        compare2:AddColumn(0)
        compare2:AddColumn(1)
        frame:Calculate(compare2)
        
        CompareGroupsResult result2 = compare2:GetResult()
        Check(result2:GetTestStatistic(), -0.3854541397819923)
        Check(result2:GetDegreesOfFreedom(), 10.0)
        Check(result2:GetGroupSummary(result2:GetGroups():Get(0)):GetMean(), 6.0)
        Check(result2:GetGroupSummary(result2:GetGroups():Get(1)):GetMean(), 7.166666666666666)
        Check(result2:GetProbabilityValue(), 0.7079732489755866)
        Check(result2:GetEffectSize(), -0.22254205136338887)
    end
end