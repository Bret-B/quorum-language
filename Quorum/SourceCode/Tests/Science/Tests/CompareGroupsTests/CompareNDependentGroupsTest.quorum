package Science.Tests

use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareGroups
use Libraries.Compute.Statistics.Reporting.CompareNGroupsResult

/*
    This class tests a repeated measures anova
*/
class CompareNDependentGroupsTest is Test

    on create
        SetName("Calculate CompareNDependentGroups")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        CompareGroups compare
        compare:RepeatedMeasures(true)
        compare:AddColumn(0)
        compare:AddColumn(1)
        compare:AddColumn(2)
        compare:AddColumn(3)
        frame:Calculate(compare)
        
        CompareNGroupsResult result = cast(CompareNGroupsResult, compare:GetResult())
        Check(result:GetTestStatistic(), 13.24054268777119)
        Check(result:GetDegreesOfFreedomBetweenGroups(), 3.0)
        Check(result:GetDegreesOfFreedomWithinGroups(), 5.0)
        Check(result:GetProbabilityValue(), 1.7181881658023812e-4)
        Check(result:GetEffectSize(), 0.6262429182564458)
    end
end