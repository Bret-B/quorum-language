package Science.Tests
use Libraries.Testing.Test
use Libraries.Compute.Statistics.DataFrame
use Libraries.Compute.Statistics.Tests.CompareVariances
use Libraries.Compute.Statistics.Reporting.CompareVariancesResult

/*
    This class tests mauchly's test for sphericity of variances
*/
class CompareVariancesRepeatedMeasuresTest is Test

    on create
        SetName("Calculate Mauchly's test")
    end

    action Run
        ColumnCalculationTest framer
        DataFrame frame = framer:GetDefaultDataFrame()

        CompareVariances compare
        compare:AddColumn(0)
        compare:AddColumn(1)
        compare:AddColumn(2)
        compare:AddColumn(3)
        compare:RepeatedMeasures(true)
        frame:Calculate(compare)
        
        CompareVariancesResult result = cast(CompareVariancesResult, compare:GetResult())
        Check(result:GetTestStatistic(), 0.00930567715078534)
        Check(result:GetChiWSquaredTestStatistic(), 17.409319525341587)
        Check(result:GetProbabilityValue(), 0.003785502714980238)
    end
end