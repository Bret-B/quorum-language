package Libraries.Interface.Undo

use Libraries.Interface.Undo.Edit
use Libraries.Interface.Item
use Libraries.Containers.Array
use Libraries.Interface.Controls.Scenes.Layers.EditorLayer
use Libraries.Interface.Controls.Scenes.SceneEditor_LIBRARY

class SceneEditorInsertEdit is Edit
    
    SceneEditor_LIBRARY controller = undefined
    Array<Item> items = undefined
    EditorLayer layer = undefined

    action Create(SceneEditor_LIBRARY controller, EditorLayer layer, Item item)
        me:controller = controller
        me:layer = layer

        Array<Item> items
        items:Add(item)
        me:items = items
    end

    action Create(SceneEditor_LIBRARY controller, EditorLayer layer, Array<Item> items)
        me:controller = controller
        me:items = items
        me:layer = layer
    end

    action Undo
        integer counter = 0
        repeat while counter < items:GetSize()
            controller:Delete(items:Get(counter))
            counter = counter + 1
        end
    end

    action Redo
        integer counter = 0
        repeat while counter < items:GetSize()
            controller:Add(layer, items:Get(counter))
            counter = counter + 1
        end
    end
end