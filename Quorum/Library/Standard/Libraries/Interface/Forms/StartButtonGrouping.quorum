package Libraries.Interface.Forms

use Libraries.Game.Graphics.Color
use Libraries.Game.Graphics.Label
use Libraries.Interface.Controls.Button

class StartButtonGrouping is Grouping

    Label label = undefined
    Button button = undefined

    on create
        CenterAlignTitle()
        CenterAlignContent()
        SetTitleSizeLarge()
        
        // These colors shouldn't be hardcoded in the long run, but this works as temporary values for testing.
        Color color
        color:SetColor(0.92, 0.92, 0.92, 1.0)
        SetBackgroundColor(color)
        SetBorderColor(color:White())
        SetBorderThickness(1)
        SetCornerRounding(0.2, 0.2, 0.2, 0.2)
    end

    action Initialize(text title, text label, text buttonName)
        SetTitle(title)
        me:label = AddLabel(title + " Label", label)
        button = AddButton(buttonName)
    end

    action GetLabel returns Label
        return label
    end

    action GetButton returns Button
        return button
    end

end