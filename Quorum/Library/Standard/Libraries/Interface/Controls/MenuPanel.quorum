package Libraries.Interface.Controls

use Libraries.Interface.Layouts.VerticalMenuLayout

class MenuPanel is MenuPanelBlueprint
    
    on create
        SetName("MenuPanel")

        VerticalMenuLayout panelLayout
        SetLayout(panelLayout)
    end

    action IsScrollable returns boolean
        return false
    end

    action Add(MenuItem item)
        parent:Control:Add(item)
    end

    action Add(integer index, MenuItem item)
        parent:Control:Add(index, item)
    end

    action Remove(MenuItem item)
        parent:Control:Remove(item)
    end

    action RemoveAt(integer index)
        parent:Control:RemoveAt(index)
    end
end