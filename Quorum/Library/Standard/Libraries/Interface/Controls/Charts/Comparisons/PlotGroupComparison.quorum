package Libraries.Interface.Controls.Charts

use Libraries.Containers.Support.Comparison
use Libraries.Interface.Controls.Charts.Graphics.PlotGroup

class PlotGroupComparison is Comparison
    boolean ascending = false

    // This currently sorts single-plot plot groups in descending bar size order.
    // Whenever sort is used with this, be sure to update axis labels.
    action Compare(Object left, Object right) returns integer
        PlotGroup group1 = cast(PlotGroup, left)
        PlotGroup group2 = cast(PlotGroup, right)
        if group1:GetSize() = 0 or group2:GetSize() = 0
            return parent:Comparison:EQUAL
        end

        if ascending
            if group1:Get(0):GetMedian() > group2:Get(0):GetMedian()
                return parent:Comparison:LARGER
            elseif group1:Get(0):GetMedian() < group2:Get(0):GetMedian()
                return parent:Comparison:SMALLER
            else
                return parent:Comparison:EQUAL
            end
        else
            if group1:Get(0):GetMedian() > group2:Get(0):GetMedian()
                return parent:Comparison:SMALLER
            elseif group1:Get(0):GetMedian() < group2:Get(0):GetMedian()
                return parent:Comparison:LARGER
            else
                return parent:Comparison:EQUAL
            end
        end
    end

    action SetAscending(boolean ascending)
        me:ascending = ascending
    end
end