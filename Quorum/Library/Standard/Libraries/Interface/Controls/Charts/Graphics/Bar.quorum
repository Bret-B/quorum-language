package Libraries.Interface.Controls.Charts

use Libraries.Interface.Controls.Icon

/*
The Bar class is a data structure that stores information for each 
indiviual bar. Bar contains a barIcon that is used for accessibility
and keeping track of to which series the bar belongs.

Attribute: Example

use Libraries.Interface.Controls.Charts.Bar
class Main
   action Main
      //make bar
      Bar bar
      //add value
      bar:SetValue(20.0)
      //get value
      number x = bar:GetValue()
   end
end
*/

class Bar
    number barHeight = 0    //barHeight is a percentage based on the max value all bars
    number barValue = 0     //barValue is the actual numerical value
    text barName = ""
    Icon barIcon
    Series series = undefined

    action SetIcon(Icon icon)
        barIcon = icon
    end
    action GetIcon() returns Icon
        return barIcon
    end
    action SetName(text name)
        barName = name
    end
    
    action GetName() returns text
        return barName
    end
    action SetValue(number value)
        barValue = value
    end
    
    action GetValue() returns number
        return barValue
    end

    action SetHeight(number height)
        if height < 0
            height = 0
        elseif height > 1.0
            height = 1.0
        end
        barHeight = height
    end
    
    action GetHeight() returns number
        return barHeight
    end

    action SetSeries(Series series)
        me:series = series
    end

    action GetSeries returns Series
        return series
    end

end