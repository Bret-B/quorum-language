package Libraries.Interface.Views

use Libraries.Game.Graphics.Color

class ControlShaderView is DrawableView, ControlView

    boolean mouseOver = false
    boolean mouseDown = false
    boolean selected = false

    action Initialize
        Color color
        color:SetColor(1, 1, 1, 1)
        LoadFilledRectangle(2, 2, color)
    end

    action BeginMouseOver
        mouseOver = true
    end

    action EndMouseOver
        mouseOver = false
    end

    action ClickedMouse
        mouseDown = true
    end

    action ReleasedMouse
        mouseDown = false
    end

    action GainedSelection
        selected = true
    end

    action LostSelection
        selected = false
    end

    action IsMouseOver returns boolean
        return mouseOver
    end

    action IsMouseDown returns boolean
        return mouseDown
    end

    action IsSelected returns boolean
        return selected
    end

    action Copy returns ControlView
        ControlShaderView view
        view:mouseOver = mouseOver
        view:mouseDown = mouseDown
        view:selected = selected
        return view
    end

end