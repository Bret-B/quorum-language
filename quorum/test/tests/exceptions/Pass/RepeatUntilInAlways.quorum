/*
Expected output:
detect
always
always
*/

use Libraries.Language.Errors.all

class Main
    action Main
        check
            integer k = cast(integer, "3.7")
        detect e of type CastError
            output "detect"
        always
            integer k = 0
            repeat until k = 2
                output "always"
                k = k + 1
            end
        end
    end
end