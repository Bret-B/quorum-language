/**
  * Expected output:
  *
  * Error: callMe failed
  * true
  */

use Libraries.Language.Errors.Error

class Main
    action Main
        boolean gotError = false
        check
            callMe(50)
        detect e of type Error
            print "Error: " + e:GetErrorMessage()
            gotError = true
        always
            print gotError
        end
    end

    action callMe(integer depth)
        if depth <= 25
            alert("callMe failed")
        end
    
        callMe(depth - 1)
    end
end