/*
Expected output:
detect
always
*/

use Libraries.Language.Errors.all

class Main
    action Main
        check
            integer k = cast(integer, "3.7")
            integer n = 0
            repeat while n < 20
                print "shouldn't be here"
                n = n + 1
            end
        detect e of type CastError
            print "detect"
        always
            print "always"
        end
    end
end