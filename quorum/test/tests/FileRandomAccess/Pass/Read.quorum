use Libraries.System.File
use Libraries.System.FileRandomAccess

class Main
    action Main
        // Read contents of single line file, then multi-line file.
        File f
        f:SetRelativePath("test/tests/FileRandomAccess/Resources/singleLine")

        FileRandomAccess r
        r:OpenForRandomAccess(f)
        text singleLine = r:Read()

        // go back to beginning and read again.
        r:GoToBeginning()
        text anotherSingleLine = r:Read()
        r:Close()

        // now multi-line file
        f:SetRelativePath("test/tests/FileRandomAccess/Resources/multipleLines")
        r:OpenForRandomAccess(f)
        text multiLine = r:Read()

        print singleLine
        print anotherSingleLine
        print multiLine
        
        // output should be...
        // this is a single line
        // this is a single line
        // line 1
        // line 2
        // line 3
        // line 4
        // ...
        // line n
    end
end