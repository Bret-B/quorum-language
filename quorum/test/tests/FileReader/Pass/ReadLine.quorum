use Libraries.System.File
use Libraries.System.FileReader

class Main
    action Main
        // Read contents of single line file, then multi-line file.
        File f
        f:SetRelativePath("test/tests/FileReader/Resources/singleLine")

        FileReader r
        r:OpenForRead(f)
        text singleLine = r:ReadLine()
        r:Close()

        // now multi-line file
        f:SetRelativePath("test/tests/FileReader/Resources/multipleLines")
        r:OpenForRead(f)
        text multiLine = r:ReadLine()
        text multiLine2 = r:ReadLine()
        r:Close()

        print singleLine
        print multiLine
        print multiLine2
        
        // output should be...
        // this is a single line
        // line 1
        // line 2
    end
end