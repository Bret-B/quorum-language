use Libraries.System.File
use Libraries.System.FileReader

class Main
    action Main
        // should be no output, no errors.
        File f
        f:SetRelativePath("test/tests/FileReader/Resources/empty")

        FileReader r
        r:OpenForRead(f)

        r:Close()

        f:SetRelativePath("test/tests/FileReader/Resources/mixReads")

        r:OpenForRead(f)

        r:Close()

        f:SetRelativePath("test/tests/FileReader/Resources/multipleLines")

        r:OpenForRead(f)

        r:Close()

        f:SetRelativePath("test/tests/FileReader/Resources/singleLine")

        r:OpenForRead(f)

        r:Close()
    end
end