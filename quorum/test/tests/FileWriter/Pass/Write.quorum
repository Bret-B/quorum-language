use Libraries.System.File
use Libraries.System.FileReader
use Libraries.System.FileWriter

class Main
    action Main
        text textToWrite = "abcdefgh"
        // Write a new file, read its contents and quit.
        File f
        f:SetRelativePath("../../../test/tests/FileWriter/Resources/newFile")
        FileWriter w
        w:OpenForWrite(f)
        
        // Write a ilne.
        w:Write(textToWrite)
        w:Close()

        // Read the line back in, make sure it's the same.
        FileReader r
        r:OpenForRead(f)
        text readText = r:Read()
        r:Close()

        // Delete the file.
        f:Delete()

        boolean success = (readText = textToWrite)

        print success
    end
end