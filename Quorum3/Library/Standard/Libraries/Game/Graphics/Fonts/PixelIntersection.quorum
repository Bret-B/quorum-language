package Libraries.Game.Graphics.Fonts

use Libraries.Language.Support.CompareResult
use Libraries.Game.Graphics.Fonts.all

class PixelIntersection 
    
    integer xPosition = -1
    number intensity = -1.0

    action GetIntensity() returns number
        return me:intensity
    end

    action SetIntensity(number intensity)
        me:intensity = intensity
    end

    action GetXPosition() returns integer
        return me:xPosition
    end

    action SetXPosition(integer x)
        me:xPosition = x
    end

    action ToText returns text
        return "" + xPosition
    end
    
    action Compare (Object o) returns CompareResult
        CompareResult r
        PixelIntersection p2 = cast(PixelIntersection, o)
        r = me:xPosition:Compare(p2:GetXPosition())
        return r
    end
    
end