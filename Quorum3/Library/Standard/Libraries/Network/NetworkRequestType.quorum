package Libraries.Network

/**
 *
 * @author Patrick Daleiden
 */

class NetworkRequestType 
    private integer HEAD = 0
    private integer GET = 1
    private integer POST = 2
    private integer PUT = 3
    private integer PATCH = 4
    private integer DELETE = 5
    private integer type = POST

    on create
        type = POST
    end

    action SetToHEAD()
        type = HEAD
    end

    action SetToGET()
        type = GET
    end

    action SetToPOST()
        type = POST
    end

    action SetToPUT()
        type = PUT
    end

    action SetToPATCH()
        type = PATCH
    end

    action SetToDELETE()
        type = DELETE
    end

    action GetType() returns integer
        return type
    end

    action IsHEAD() returns boolean
        return type = HEAD
    end

    action IsGET() returns boolean
        return type = GET
    end

    action IsPOST() returns boolean
        return type = POST
    end

    action IsPUT() returns boolean
        return type = PUT
    end

    action IsPATCH() returns boolean
        return type = PATCH
    end

    action IsDELETE() returns boolean
        return type = DELETE
    end

    action ToText() returns text
        if type = HEAD
            return "HEAD"
        elseif type = GET
            return "GET"
        elseif type = POST
            return "POST"
        elseif type = PUT
            return "PUT"
        elseif type = PATCH
            return "PATCH"
        elseif type = DELETE
            return "DELETE"
        else
            return "none"
        end
    end

end