package Libraries.Network

/**
 *
 * @author Patrick Daleiden
 */

class NetworkRequestType 
    integer HEAD = 0
    integer GET = 1
    integer POST = 2
    integer PUT = 3
    integer PATCH = 4
    integer DELETE = 5
    integer type = POST

    on create
        type = POST
    end

    action HEAD()
        type = HEAD
    end

    action GET()
        type = GET
    end

    action POST()
        type = POST
    end

    action PUT()
        type = PUT
    end

    action PATCH()
        type = PATCH
    end

    action DELETE()
        type = DELETE
    end

    action GetType() returns integer
        return type
    end

    action GetType(integer type) returns text
        if type = HEAD
            return "HEAD"
        elseif type = GET
            return "GET"
        elseif type = POST
            return "POST"
        elseif type = PUT
            return "PUT"
        elseif type = PATCH
            return "PATCH"
        elseif type = DELETE
            return "DELETE"
        else
            return "none"
        end
    end

    action IsHEAD() returns boolean
        return type = HEAD
    end

    action IsGET() returns boolean
        return type = GET
    end

    action IsPOST() returns boolean
        return type = POST
    end

    action IsPUT() returns boolean
        return type = PUT
    end

    action IsPATCH() returns boolean
        return type = PATCH
    end

    action IsDELETE() returns boolean
        return type = DELETE
    end

end