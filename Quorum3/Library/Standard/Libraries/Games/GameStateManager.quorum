package Libraries.Games

/*
  This class is quorum side of the GameStateManager that creates a singleton
  to maintain the game state across class instances.
 */

use Libraries.Games.Application
use Libraries.Games.GameDisplay
use Libraries.Games.Graphics.GL20Manager
use Libraries.Games.InputManager


class GameStateManager 
    
    system action SetApplication(Application app)
    system action GetApplication returns Application
   
    system action SetGameDisplay(GameDisplay disp)
    system action GetGameDisplay returns GameDisplay
  
    system action SetGameGraphics(GL20Manager gl20)
    system action GetGameGraphics returns GL20Manager

    system action GetInput returns InputManager
    system action SetInput(InputManager im)

    system action SetNativePath(text path)
    system action GetNativePath returns text

    system action SetOperatingSystem(text os)
    system action GetOperatingSystem returns text

end